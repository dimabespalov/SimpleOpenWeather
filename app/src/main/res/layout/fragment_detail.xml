<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.org.bespalov.weather.DetailActivity$PlaceholderFragment"
    android:orientation="horizontal">

    <TextView android:id="@+id/detail_date_textview" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/detail_forecast_textview" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/detail_high_textview" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/detail_low_textview" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"/>

</LinearLayout>
